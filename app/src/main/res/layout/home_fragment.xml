<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lists_fragment_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home_ui.HomeFragment" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <fragment android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:name="com.waelkhelil.sayara_dz.view.home_ui.HomeTopFragment"
                      android:id="@+id/home_top_fragment"/>
            <fragment android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:name="com.waelkhelil.sayara_dz.view.home_ui.HorizontalListFragment"
                      android:id="@+id/horizontal_brands_list_fragment"/>
        </LinearLayout>
    </ScrollView>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>