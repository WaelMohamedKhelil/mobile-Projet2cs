<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/kollektif</item>
    </style>
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/kollektif</item>
    </style>
    <style name="hidden">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">0sp</item>
    </style>
    <style name="toolbar_collapsedText" parent="AppTheme">
        <item name="android:fontFamily">@font/kollektif_bold</item>
    </style>
</resources>
